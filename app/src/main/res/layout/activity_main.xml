<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/spinner_player_one_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/button_player_one_multiply_by_1"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="60dp" />

    <Button
        android:id="@+id/button_player_one_multiply_by_1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="1x"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="79dp" />

    <Button
        android:id="@+id/button_player_one_multiply_by_2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="2x"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="135dp" />

    <Button
        android:id="@+id/button_player_one_multiply_by_3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="3x"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="194dp" />

    <Button
        android:id="@+id/button_player_one_inner_bullseye"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:text="50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_player_one_outer_bullseye" />

    <Button
        android:id="@+id/button_player_one_outer_bullseye"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="25"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="270dp" />
</android.support.constraint.ConstraintLayout>